<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<div class="container">
  <form action="/restaurants/{{restaurantList._id}}?_method=PUT" method="POST">
    <div class="mb-2">
      <label for="name" class="form-label">中文店名</label>
      <input type="text" class="form-control" id="name" placeholder="Name" name="name" value="{{restaurantList.name}}"
        required>
    </div>
    <div class="mb-2">
      <label for="name_en" class="form-label">英文店名</label>
      <input type="text" class="form-control" id="name_en" placeholder="English name" name="name_en"
        value="{{restaurantList.name_en}}" required>
    </div>
    <div class="mb-2">
      <label for="category" class="form-label">餐廳類別</label>
      <input type="text" class="form-control" id="category" placeholder="choose" list="categoryOptions" name="category"
        value="{{restaurantList.category}}" required>
      <datalist id="categories">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>咖啡</option>
      </datalist>
    </div>
    <div class="mb-2">
      <label for="image" class="form-label">圖片連結</label>
      <input type="url" class="form-control" id="image" name="image" value="{{restaurantsData.image}}" required>
    </div>
    <div class="mb-2">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" placeholder="" name="location"
        value="{{restaurantList.location}}" required>
    </div>
    <div class="mb-2">
      <label for="phone" class="form-label">電話</label>
      <input type="tel" class="form-control" id="phone" placeholder="" name="phone" value="{{restaurantList.phone}}"
        required>
    </div>
    <div class="mb-2">
      <label for="google_map" class="form-label">GoogleMap連結</label>
      <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurantList.google_map}}"
        required>
    </div>
    <div class="mb-2">
      <label for="rating" class="form-label">評分</label>
      <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating"
        value="{{restaurantList.rating}}" required>
    </div>
    <div class="mb-2">
      <label for="description" class="form-label">敘述</label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required>{{restaurantList.description}}</textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">Back</button>
      </a>
    </div>
  </form>
</div>